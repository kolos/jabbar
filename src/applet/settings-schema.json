{
    "layout": {
        "type": "layout",
        "pages": ["main"],
        "main": {
            "type": "page",
            "title": "Settings",
            "sections": ["general", "icons"]
        },
        "general": {
            "type": "section",
            "title": "General",
            "keys": ["enable-notifications", "enable-media-control", "critical-battery-level"]
        },
        "icons": {
            "type": "section",
            "title": "Icons",
            "keys": ["icon-default", "icon-head-detected", "icon-head-missing"]
        }
    },
    "enable-notifications": {
        "type": "checkbox",
        "default": true,
        "description": "Enable notifications",
        "tooltip": "Show system notifications for device events"
    },
    "enable-media-control": {
        "type": "checkbox",
        "default": true,
        "description": "Enable media control",
        "tooltip": "Automatically Play/Pause media when headset is put on or taken off"
    },
    "critical-battery-level": {
        "type": "spinbutton",
        "default": 5,
        "min": 1,
        "max": 99,
        "step": 1,
        "units": "%",
        "description": "Critically low battery",
        "tooltip": "Battery level percentage to trigger critical warning"
    },
    "icon-default": {
        "type": "iconfilechooser",
        "default": "audio-headset",
        "description": "Default Icon",
        "tooltip": "Icon name to use when device is connected"
    },
    "icon-head-detected": {
        "type": "iconfilechooser",
        "default": "audio-headset-symbolic",
        "description": "Head Detected Icon",
        "tooltip": "Icon name to use when headset is on head"
    },
    "icon-head-missing": {
        "type": "iconfilechooser",
        "default": "audio-headphones-symbolic",
        "description": "Head Missing Icon",
        "tooltip": "Icon name to use when headset is off head"
    }
}
