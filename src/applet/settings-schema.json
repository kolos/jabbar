{
    "layout": {
        "type": "layout",
        "pages": ["main"],
        "main": {
            "type": "page",
            "title": "Settings",
            "sections": ["general"]
        },
        "general": {
            "type": "section",
            "title": "General",
            "keys": ["enable-notifications", "critical-battery-level"]
        }
    },
    "enable-notifications": {
        "type": "checkbox",
        "default": true,
        "description": "Enable notifications",
        "tooltip": "Show system notifications for device events"
    },
    "critical-battery-level": {
        "type": "spinbutton",
        "default": 5,
        "min": 1,
        "max": 99,
        "step": 1,
        "units": "%",
        "description": "Critically low battery",
        "tooltip": "Battery level percentage to trigger critical warning"
    }
}
